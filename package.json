   "jest": {
      "preset": "ts-jest",
      "testEnvironment": "jsdom",
      "moduleNameMapper": {
         "^@/(.*)$": "<rootDir>/$1"
      },
      "setupFilesAfterEnv": [
         "<rootDir>/jest.setup.js"
      ],
      "transform": {
         "^.+\\.(ts|tsx)$": [
            "babel-jest",
            {
               "presets": [
                  "next/babel"
               ]
            }
         ]
      },
      "transformIgnorePatterns": [
         "/node_modules/(?!(@radix-ui|react-dropzone)/)"
      ],
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
